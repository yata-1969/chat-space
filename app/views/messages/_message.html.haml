%ul.chat-main__message-list__leftbox
  %li.chat-main__message-parts
    .chat-main__poster
      .chat-main__poster-name
        = message.user.name
      .chat-main__poster-date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .chat-main__message 
      - if message.content.present?
        %p.chat-main__message__content
          = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?